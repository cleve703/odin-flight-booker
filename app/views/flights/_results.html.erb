<%= form_with model: @bookings, method: 'get', local: true do %>
  <table>
    <tr>
      <th>Select</th>
      <th>Origin Airport</th>
      <th>Destination Airport</th>
      <th>Departure Date & Time</th>
      <th>Flight Duration (mins)</th>
    </tr>
    <% @flights.each do |flight| %>
    <tr>
      <td><%= radio_button_tag(:flight, flight) %>
      <td><%= flight.origin.airport_code %></td>
      <td><%= flight.destination.airport_code %></td>
      <td><%= flight.departure_time %></td>
      <td><%= flight.duration %></td>
    </tr>
    <% end %>
  </table>
  <%= hidden_field(:bookings, :num_passengers => @search_criteria[:num_passengers]) %>
  <%= submit_tag('Book a flight')%>
<% end %>