<%= form_with model: @booking, url: bookings_path, local: true do |f| %>
  <ul>
    <%= f.fields_for :passengers do |passengers_form| %>
      <li>
        <%= passengers_form.label :name %>
        <%= passengers_form.text_field :name, placeholder: 'Name' %>

        <%= passengers_form.label :email %>
        <%= passengers_form.text_field :email, placeholder: 'Email' %>
      </li>
    <% end %>
  </ul>
  <%= f.submit('Add passengers') %>
<% end %>